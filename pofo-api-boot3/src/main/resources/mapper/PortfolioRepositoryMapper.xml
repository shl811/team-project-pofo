<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pofo.pofoapiboot3.repository.PortfolioRepository">
    <resultMap id="portfolioViewResultMap" type="PortfolioView">
        <result property="memberId" column="member_id" />
        <result property="regDate" column="reg_date" />
        <result property="deleteDate" column="delete_date" />
        <result property="awardDate" column="award_date" />
        <result property="likeCount" column="like_count" />
    </resultMap>

    <select id="findViewAll" resultMap="portfolioViewResultMap">
        select *
        from index_portfolio_view
        <if test="size != null">
			limit #{size} offset #{offset}
		</if>
    </select>

</mapper>